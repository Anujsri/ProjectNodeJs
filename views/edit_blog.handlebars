<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Edit Blog</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-12">
      <form ng-submit="updateBlog()" ng-init="getBlog()">
        <div class="form-group">
          <label>Title</label>
          <input type="text" class="form-control" ng-model="blog.title" placeholder="Title">
        </div>
         
        <div class="form-group">
          <label>Conetent</label>
          <textarea name="content" cols="60" rows="10" required="required" placeholder="content goes here....">
        </div>   
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
    </div>
  </div>
</div>